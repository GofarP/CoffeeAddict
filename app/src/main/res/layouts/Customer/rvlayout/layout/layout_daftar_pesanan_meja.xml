<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:strokeColor="@color/defaults"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:strokeWidth="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/linearlayoutnomeja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/defaults"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/lblnomejapesananmeja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Meja"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    >

                </TextView>

            </LinearLayout>



            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linearlayoutnomeja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/namapenyewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Penyewa:"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/defaults"
                    >
                </TextView>

                <TextView
                    android:id="@+id/lblnamapenyewapesananmeja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/defaults"
                    android:text="..."
                    android:textStyle="bold"
                    android:layout_below="@+id/namapenyewa"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"

                    >
                </TextView>

                <TextView
                    android:id="@+id/tglsewa"
                    android:layout_below="@+id/lblnamapenyewapesananmeja"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:text="Sewa untuk tanggal:"
                    android:textColor="@color/defaults"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/lbltglsewapesananmeja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/defaults"
                    android:text="..."
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/tglsewa"
                    >
                </TextView>


                <Button
                    android:id="@+id/btnlihatpesananmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbltglsewapesananmeja"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_style"
                    android:text="Lihat Pesanan"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="20dp"
                    >

                </Button>



                <Button
                    android:id="@+id/btnbatalsewapesanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Batalkan Sewa"
                    android:background="@drawable/button_cancel_style"
                    android:textColor="#ffffff"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/btnlihatpesananmenu"
                    >
                </Button>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >



            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>