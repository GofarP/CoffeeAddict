<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.EditMejaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fillViewport="false"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:strokeColor="@color/defaults"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:strokeWidth="2dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:id="@+id/namamenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Edit No Meja"
                        android:textColor="@color/defaults"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/namamenu"
                        android:layout_marginTop="20dp"
                        android:text="Nomor meja"
                        android:textColor="@color/defaults"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/txteditnomeja"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/nama"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_style"
                        android:hint="Masukkan No Meja yang baru"
                        android:inputType="text"
                        android:maxLength="20"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/editjenismeja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txteditnomeja"
                        android:layout_marginTop="20dp"
                        android:text="Jenis meja"
                        android:textColor="@color/defaults"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/txteditjenismeja"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/editjenismeja"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/et_style"
                        android:hint="Masukkan Jenis Meja yang baru"
                        android:inputType="text"
                        android:maxLength="20"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/editgambar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txteditjenismeja"
                        android:layout_marginTop="10dp"
                        android:textSize="17sp"
                        android:textColor="@color/defaults"
                        android:text="Gambar"
                        >
                    </TextView>

                    <ImageView
                        android:id="@+id/iveditnomeja"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_below="@+id/editgambar"
                        android:scaleType="fitXY"
                        >

                    </ImageView>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btneditnomeja"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="Edit NO Meja"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                >

            </Button>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>